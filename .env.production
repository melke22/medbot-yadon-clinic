# Yadon Clinic MedBot - Production Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/medbot_production

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate a strong JWT secret (32+ characters)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_32_CHARS_MINIMUM

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# For appointment confirmations and notifications
EMAIL_USER=noreply@yadonclinic.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=Yadon Clinic <noreply@yadonclinic.com>
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ===========================================
# CLINIC INFORMATION
# ===========================================
CLINIC_NAME=Yadon Clinic
CLINIC_ADDRESS=Addis Ababa, Ethiopia
CLINIC_PHONE=+251 90 910 2009
CLINIC_EMAIL=info@yadonclinic.com
CLINIC_WEBSITE=https://yadonclinic.com

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
DEFAULT_ADMIN_EMAIL=admin@yadonclinic.com
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD_IMMEDIATELY

# ===========================================
# OPTIONAL: EXTERNAL SERVICES
# ===========================================
# Dialogflow (for advanced NLP - optional)
DIALOGFLOW_PROJECT_ID=your_dialogflow_project_id
DIALOGFLOW_LANGUAGE_CODE=en

# SMS Service (for appointment reminders - optional)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=YadonClinic

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/medbot.log
ENABLE_REQUEST_LOGGING=true

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
MAX_CONCURRENT_CONNECTIONS=100
REQUEST_TIMEOUT=30000
MONGODB_CONNECTION_TIMEOUT=10000